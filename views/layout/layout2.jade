			// header 
			header
				.navbar.navbar-fixed-top
					.navbar-inner
						.container-fluid
							a.brand(href='/')
								img(src='/img/logo.png', alt='Rinker')
							ul.nav.user_menu.pull-right
								li.hidden-phone.hidden-tablet
									.nb_boxes.clearfix
										a.label.ttip_b(data-toggle='modal', data-backdrop='static', href='#myMail', title='New messages')
