		.style_switcher
			.sepH_c
				p Colors:
				.clearfix
					a.style_item.jQclr.blue_theme.style_active(href='javascript:void(0)', title='blue') blue
					a.style_item.jQclr.dark_theme(href='javascript:void(0)', title='dark') dark
					a.style_item.jQclr.green_theme(href='javascript:void(0)', title='green') green
					a.style_item.jQclr.brown_theme(href='javascript:void(0)', title='brown') brown
					a.style_item.jQclr.eastern_blue_theme(href='javascript:void(0)', title='eastern_blue') eastern blue
					a.style_item.jQclr.tamarillo_theme(href='javascript:void(0)', title='tamarillo') tamarillo
			.sepH_c
				p Backgrounds:
				.clearfix
					span.style_item.jQptrn.style_active.ptrn_def(title='')
					span.ssw_ptrn_a.style_item.jQptrn(title='ptrn_a')
					span.ssw_ptrn_b.style_item.jQptrn(title='ptrn_b')
					span.ssw_ptrn_c.style_item.jQptrn(title='ptrn_c')
					span.ssw_ptrn_d.style_item.jQptrn(title='ptrn_d')
					span.ssw_ptrn_e.style_item.jQptrn(title='ptrn_e')
			.sepH_c
				p Layout:
				.clearfix
					label.radio.inline
						input#ssw_layout_fluid(type='radio', name='ssw_layout', value='', checked='checked')
						| Fluid
					label.radio.inline
						input#ssw_layout_fixed(type='radio', name='ssw_layout', value='rinker-fixed')
						| Fixed
			.sepH_c
				p Sidebar position:
				.clearfix
					label.radio.inline
						input#ssw_sidebar_left(type='radio', name='ssw_sidebar', value='', checked='checked')
						| Left
					label.radio.inline
						input#ssw_sidebar_right(type='radio', name='ssw_sidebar', value='sidebar_right')
						| Right
			.sepH_c
				p Show top menu on:
				.clearfix
					label.radio.inline
						input#ssw_menu_click(type='radio', name='ssw_menu', value='', checked='checked')
						| Click
					label.radio.inline
						input#ssw_menu_hover(type='radio', name='ssw_menu', value='menu_hover')
						| Hover
			.gh_button-group
				a#showCss.btn.btn-primary.btn-mini(href='#') Show CSS
				a#resetDefault.btn.btn-mini(href='#') Reset
			.hide
				ul#ssw_styles
					li.small.ssw_mbColor.sepH_a(style='display: none;')
						| body {
						span.ssw_mColor.sepH_a(style='display: none;')
							| color: #
							span
							| ;
						span.ssw_bColor(style='display: none;')
							| background-color: #
							span
						| }
					li.small.ssw_lColor.sepH_a(style='display: none;')
						| a { color: #
						span
						| }
