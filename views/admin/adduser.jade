extends ../layout/layout

block prepend nav
  selected = 'adduser'

block content
  #contentwrapper
    .main_content
      .row-fluid
        form(method="post", action="/users/new").span9.form-horizontal
          div.page-header
            h1 회원 가입

          div.control-group
            label(for="name").control-label 이름
            div.controls
              input(type="text", name="name", id="name", required)

          div.control-group
            label(for="id").control-label 아이
            div.controls
              input(type="text", name="id", id="id", required)

          div.control-group
            label(for="email").control-label 이메일
            div.controls
              input(type="text", name="email", id="email", required)

          div.control-group
            label(for="password").control-label 패스워드
            div.controls
              input(type="password", name="password", id="password", placeholder="4자리 이상으로 입력해 주세요.", required)

          button(type="submit").btn.btn-primary: strong 저장
  include ../layout/sidebar
