extends layout/layout

block content
	#contentwrapper
		.main_content
			.row-fluid
				h1 Users

				if users.length
					p Here are the current users:
					ul.users
						for user in users
							li.user
								a(href='/graph/#{user.id}') #{user.name}
				else
					p There are no users currently.

				form(action='', method='POST')
					p Create a new user:
					input(type='text', name='name', placeholder='Name', required)
					input(type='submit', value='Create')
				a.back_link.btn.btn-small(herf="javascript:history.back()") Go back 
	include layout/sidebar